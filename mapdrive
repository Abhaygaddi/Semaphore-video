---
- hosts: all
  become: yes
  gather_facts: no
  tasks:
    - name: Execute Windows Update Script from Shared Drive
      win_shell: |
        powershell.exe -ExecutionPolicy Bypass -File "\\192.168.29.132\Patches\Patch.ps1"
      register: update_result
      ignore_errors: yes

    - name: Display update result
      debug:
        var: update_result
