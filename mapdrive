- name: Ansible Copy Example Local to Remo

	  hosts: windows

	  tasks:

	    

	    - name: copying file from local ansible master host to remote Windows 2016 Datacenter servers

	      ansible.windows.win_copy:

	        src: /tmp/patches/KB5055521.msu

	        dest: C:\Users\ansible

	      when: ansible_facts['os_name'] == "Microsoft Windows Server 2016 Standard"


	    - name: install hotfix without validating the KB and Identifier

	      community.windows.win_hotfix:

	        source: C:\Users\ansible\KB5055521.msu

	        state: present

	      when: ansible_facts['os_name'] == "Microsoft Windows Server 2016 Standard"

	      register: hotfix_install_2016

	
