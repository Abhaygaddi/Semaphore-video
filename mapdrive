- name: Install patches from network share
  hosts: windows_servers
  tasks:
    - name: Map network drive Z:
      win_mapped_drive:
        letter: Z
        path: \\192.168.29.132\Patches
        state: present

    - name: Install Patch KB5058921.msu
      win_command: wusa Z:\KB5058921.msu /quiet /norestart
      when: ansible_facts['os_family'] == 'Windows'
      become: yes
      become_user: SYSTEM

    - name: Install Patch KB5055521.msu
      win_command: wusa Z:\KB5055521.msu /quiet /norestart
      when: ansible_facts['os_family'] == 'Windows'
      become: yes
      become_user: SYSTEM
