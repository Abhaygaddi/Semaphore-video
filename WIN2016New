---
- name: Install Patch from Samba Share Using UNC Path
  hosts: all
  gather_facts: no

  vars:
    patch_kb: KB5058921
    patch_file: KB5058921.msu
    samba_server: 192.168.29.78
    samba_share: winpatches
    samba_user: smbuser
    samba_password: "0pT1mus9r1me#"
    unc_patch_path: "\\\\{{ samba_server }}\\{{ samba_share }}\\{{ patch_file }}"

  tasks:
    - name: Ensure WinRM is running
      ansible.windows.win_service:
        name: WinRM
        state: started
        start_mode: auto

    - name: Create C:\temp if not exists
      ansible.windows.win_file:
        path: C:\temp
        state: directory

    - name: Map share temporarily using explicit command
      ansible.windows.win_command: >
        cmd.exe /c "net use \\{{ samba_server }}\{{ samba_share }} /user:{{ samba_user }} {{ samba_password }}"
      ignore_errors: yes

    - name: Install patch using UNC path
      ansible.windows.win_command: >
        wusa.exe "{{ unc_patch_path }}" /quiet /norestart
      register: patch_result
      ignore_errors: yes

    - name: Unmap share
      ansible.windows.win_command: cmd.exe /c "net use \\{{ samba_server }}\{{ samba_share }} /delete"
      ignore_errors: yes

    - name: Log patch install result
      ansible.windows.win_shell: |
        "$((Get-Date).ToString()) - Patch {{ patch_kb }} Install Status: {{ 'Success' if patch_result.rc == 0 else 'FAILED' }}" |
        Out-File -FilePath C:\temp\{{ patch_kb }}_install.log -Append

    - name: Reboot if patch requires it
      ansible.windows.win_reboot:
        reboot_timeout: 3600
      when: patch_result.rc == 3010
