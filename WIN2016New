---
- name: Install Specific Patch Directly from Linux Samba Share on Windows Server 2016
  hosts: all
  gather_facts: no

  vars:
    patch_kb: KB5058921
    patch_share_path: "\\\\<192.168.29.78>\\winpatches\\KB5058921.msu"

  tasks:
    - name: Ensure WinRM service is running
      win_service:
        name: WinRM
        state: started
        start_mode: auto

    - name: Start Windows Update service
      win_service:
        name: wuauserv
        state: started
        start_mode: auto

    - name: Create Log Directory
      win_file:
        path: C:\temp
        state: directory

    - name: Install patch directly from network share
      win_command: >
        wusa.exe {{ patch_share_path }} /quiet /norestart
      register: patch_install
      ignore_errors: yes

    - name: Log patch install result
      win_shell: |
        "$((Get-Date).ToString()) - Patch {{ patch_kb }} Install Status: {{ 'Success' if patch_install.rc == 0 else 'FAILED' }}" |
        Out-File -FilePath C:\temp\{{ patch_kb }}_install.log -Append

    - name: Reboot if Required
      win_reboot:
        reboot_timeout: 3600
      when: patch_install.rc == 3010
